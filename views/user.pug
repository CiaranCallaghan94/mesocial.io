  body
    .container-narrow
      .masthead 
        h3.muted MeSocial
      hr
      .jumbotron
        h1 #{profile.name.first} #{profile.name.last}
        h2
          i #{profile.handle}
        p.lead
          | #{profile.bio}
        a.btn.btn-large.btn-success(href=profile.callToAction.link) #{profile.callToAction.name}
      hr
      div.socials
        for social in profile.socials
          a(class=social.icon, href=social.link)

