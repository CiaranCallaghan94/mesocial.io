      body {
      padding-top: 20px;
      padding-bottom: 40px;
      }
      /* Custom container */
      .container-narrow {
      margin: 0 auto;
      max-width: 700px;
      }
      .container-narrow > hr {
      margin: 30px 0;
      }
      /* Main marketing message and sign up button */
      .jumbotron {
      margin: 80px 0;
      text-align: center;
      }
      .jumbotron h1 {
      font-size: 70px;
      line-height: 1;
      margin-bottom: 10px;
      }

      .jumbotron h2 {
      font-size: 28px;
      line-height: 1;
      margin-bottom: 30px;
      color: #999999;
      }
      .jumbotron .btn {
      font-size: 21px;
      padding: 14px 24px;
      }

      .fab, .fas {
        padding: 20px;
        font-size: 35px;
        width: 35px;
        text-align: center;
        text-decoration: none;
        margin: 5px 10px;
        border-radius: 50%;
      }

      .fab:hover, .fas:hover {
        opacity: 0.6;
        color: white;
        text-decoration: none;
      }

